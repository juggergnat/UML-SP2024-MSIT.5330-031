pipeline {
  agent {
    kubernetes {
      yaml """
        apiVersion: v1
        kind: Pod
        spec:
          containers:
          - name: cloud-sdk
            image: google/cloud-sdk:latest
            command:
            - sleep
            args:
            - 9999999
            volumeMounts:
            - name: shared-storage
              mountPath: /mnt
            - name: google-cloud-key
              mountPath: /var/secrets/google
            env:
            - name: GOOGLE_APPLICATION_CREDENTIALS
              value: /var/secrets/google/[[[`cat ~/Files/devops/.sdkkey`]]]
            - name: GOOGLE_PROJECT
              value: [[[`cat ~/Files/devops/.sdkproj`]]]
          restartPolicy: Never
          volumes:
          - name: shared-storage
            persistentVolumeClaim:
              claimName: jenkins-pv-claim
          - name: google-cloud-key
            secret:
              secretName: sdk-key          
      """
    }
  }
  stages {
    stage('Exercise 10.1: Staging environment pipeline.') {
      steps {
        echo "AUTHOR NOTE: Conditional only needed if webhook required."
        echo "AUTHOR NOTE: Which repository should I be downloading?"
        echo "AUTHOR NOTE: Default shell is sh, not bash. Set in Manage Jenkins > System > Shell executable: /bin/bash"
        git url: 'https://github.com/juggergnat/Continuous-Delivery-with-Docker-and-Jenkins-Second-Edition.git'
        sh '''
          cd Week10/ex1
          curl -LO "https://dl.k8s.io/release/$(curl -L -s https://dl.k8s.io/release/stable.txt)/bin/linux/amd64/kubectl"
          chmod +x ./kubectl
          ./kubectl version
          echo "AUTHOR NOTE: Test for differences. This command returns a JSON of differences (where present)."
          DIFF=`./kubectl diff -f calculator.yaml | head -c1`
          echo "$DIFF" 
          [[ -z "$DIFF" ]] && echo "No changes detected" || echo "Trigger rolling upgrade here."
          [[ ! -z "$DIFF" ]] && echo "./kubectl apply -f calculator.yaml"
          [[ ! -z "$DIFF" ]] && echo "./kubectl get pods --watch=false"
          echo "AUTHOR NOTE: Do not recompile or build new image."
        '''

      }
    }
  }
}
